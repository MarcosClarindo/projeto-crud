<!DOCTYPE html>
<html lang="pt-br">
    <%- include ('partials/head.ejs') %> 
<body>
    <h1><%= title  %></h1>

    <%- include ('partials/navbar.ejs') %> 

    <!-- exibindo a variavel -->
    <ul>
     <% users.forEach((user) => { %>
        <li>
            <%= user.name %> - <%= user.email %> - Idade: <%= user.age %>
            <!-- editando usuário, recebendo como req.params-->
            <a href="/edit?id=<%= user._id %>">[editar]</a>  

            <!-- removendo usuário -->
            <a href="/remove/<%= user._id%>">[remover]</a>
        </li>

     <% }) %> 
    </ul>       

    <%- include ('partials/foot.ejs') %> 
</body>
</html>